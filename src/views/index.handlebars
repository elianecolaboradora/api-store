
<header>
    <h1>Productos</h1>
    <a id="shoppingCart">Carrito</a>
</header>
<main>
    {{#if payload.length}}
        <ul>
            {{#each payload}}
                <li>
                    <h3>{{title}}</h3>
                    <p>Descripci√≥n: {{description}}</p>
                    <p>Precio: ${{price}}</p>
                    <p>Stock: {{stock}}</p>
                    <p>Categoria: {{this.category}}</p>
                    <a href="/products/{{this._id}}">ver detalles</a>
                    <button class="btnAddProduct" data-product="{{this._id}}" type="button">Agregar</button>
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p>No hay productos disponibles</p>
    {{/if}}


</main>
<footer>
    <p>Estas en pagina {{page}} de {{totalPages}}</p>
    <section class="pageContainer">
        {{#if hasPrevPage}}
            <a href="{{prevLink}}"> Anterior</a>
        {{/if}}
        {{#if hasNextPage}}
            <a href="{{nextLink}}">Siguiente </a>
        {{/if}}
    </section>
</footer>
<script src="js/index.js"></script>
